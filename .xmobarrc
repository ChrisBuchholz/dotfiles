Config { font = "9x15:Monospace:size=8"
       , bgColor = "#363636"
       , fgColor = "grey"
       , position = TopW L 100
       , lowerOnStart = True
       , commands = [ Run MultiCpu ["-t", "CPU: <fc=#ffffff><total0></fc> : <fc=#ffffff><total1></fc>","-L","3","-H","50","--normal","green","--high","red"] 10
                    , Run Memory ["-t","Mem: <fc=#ffffff><usedratio>%</fc>"] 10
                    , Run Battery ["-t", "Battery: <fc=#ffffff><left></fc>","-L", "10", "--low", "red"] 10
                    , Run Com "/home/cb/bin/wifi-state.sh" [] "wifi" 30
                    , Run Com "/home/cb/bin/sound-state.sh" [] "sound" 1
                    , Run Date "%a %b %_d %H:%M" "date" 10
                    , Run CoreTemp ["-t","Temp: <fc=#ffffff><core0>C</fc> : <fc=#ffffff><core1>C</fc>"] 10
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %wifi% <fc=#429942>|</fc> %multicpu% <fc=#429942>|</fc> %coretemp% <fc=#429942>|</fc> %memory% <fc=#429942>|</fc> %battery% <fc=#429942>|</fc> %sound% <fc=#ee9a00>%date%</fc>"
       }
