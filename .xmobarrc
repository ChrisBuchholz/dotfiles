Config { font = "-*-Fixed-Bold-R-Normal-*-13-*-*-*-*-*-*-*"
       , bgColor = ""
       , fgColor = "grey"
       , position = TopW L 100
       , lowerOnStart = True
       , commands = [ Run MultiCpu ["-L","3","-H","50","--normal","green","--high","red"] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Battery [] 10
                    , Run Swap [] 10
                    , Run Network "eth1" [] 10
                    , Run Com "/home/cb/bin/wifi-state.sh" [] "wifi" 10
                    , Run Com "/home/cb/bin/sound-state.sh" [] "sound" 10
                    , Run Date "%a %b %_d %H:%M" "date" 10
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %wifi% * %sound% * %multicpu% * %memory% * %swap% * %battery% <fc=#ee9a00>%date%</fc>"
       }
