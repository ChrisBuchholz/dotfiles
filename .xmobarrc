Config { font = "9x15:monospace-8"
       , bgColor = "#363636"
       , fgColor = "grey"
       , position = TopW L 100
       , lowerOnStart = True
       , commands = [ Run MultiCpu ["-L","3","-H","50","--normal","green","--high","red"] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Battery ["-L", "10", "--low", "red"] 10
                    , Run Swap [] 10
                    , Run Network "eth1" [] 10
                    , Run Com "/home/cb/bin/wifi-state.sh" [] "wifi" 30
                    , Run Com "/home/cb/bin/sound-state.sh" [] "sound" 1
                    , Run Date "%a %b %_d %H:%M" "date" 10
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %wifi% | %multicpu% | %memory% | %swap% | %battery% | %sound% <fc=#ee9a00>%date%</fc>"
       }
