set ignorecase

let mapleader = "\<Space>"

nnoremap 0 ^

nnoremap <Space>ci :xcmenucmd Comment Selection<CR>
vnoremap <Space>ci :xcmenucmd Comment Selection<CR>

nmap <Space>b :xcmenucmd Add Breakpoint at Current Line<CR>
nmap <Space>o :xccmd openQuickly<CR>

nmap <S-H> :xccmd shiftLeft<CR>
nmap <S-J> :xccmd moveCurrentLineDown<CR>
nmap <S-K> :xccmd moveCurrentLineUp<CR>
nmap <S-L> :xccmd shiftRight<CR>
vmap <S-H> :xccmd shiftLeft<CR>gv
vmap <S-J> :xccmd moveCurrentLineDown<CR>gvjoj
vmap <S-K> :xccmd moveCurrentLineUp<CR>gvkok
vmap <S-L> :xccmd shiftRight<CR>gv

nmap <C-h> <C-w>h
nmap <C-j> <C-w>j
nmap <C-k> <C-w>k
nmap <C-l> <C-w>l
